# Environment Variables Template
# Copy this file to .env.development for local development

# API Configuration
# For local development, use: http://localhost:3000
# For production, leave empty (same-origin)
VITE_API_URL=http://localhost:3000

# Stack Auth (Neon Auth) Configuration
# Get these from Stack Auth dashboard (https://app.stack-auth.com)
# Frontend (Vite) - these get bundled into the client
VITE_STACK_PROJECT_ID=your-project-id
VITE_STACK_PUBLISHABLE_CLIENT_KEY=pck_your-publishable-key

# Backend (server-side only) - NEVER expose these to the client
STACK_PROJECT_ID=your-project-id
STACK_SECRET_SERVER_KEY=ssk_your-secret-key

# Database connection string
DATABASE_URL=postgresql://user:password@host/database?sslmode=require
