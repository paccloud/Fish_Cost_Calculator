# Development environment variables (TEMPLATE - contains placeholder values)
# Copy this file to .env.development.local and replace with real credentials
# .env.development.local is gitignored and will not be committed

# API base URL for local development
VITE_API_URL=http://localhost:3000

# Stack Auth (Neon Auth) environment variables
# Frontend (Vite) - these get bundled into the client
VITE_STACK_PROJECT_ID=your_stack_project_id
VITE_STACK_PUBLISHABLE_CLIENT_KEY=your_stack_publishable_client_key

# Backend (server-side only)
STACK_PROJECT_ID=your_stack_project_id
STACK_SECRET_SERVER_KEY=your_stack_secret_server_key

# Database owner connection string
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require